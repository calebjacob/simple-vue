.layout
  display: flex
  opacity: 1

  &.fade-enter-active,
  &.fade-leave-active
    transition: opacity 300ms

  &.fade-enter,
  &.fade-leave-to
    opacity: 0

.layout--vertical-align
  display: table
  width: 100%
  height: 100%



.layout__primary
  .layout--vertical-align &
    display: table-cell
    vertical-align: middle
    width: 100%

.layout__primary--center
  text-align: center
